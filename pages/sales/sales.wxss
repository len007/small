/* pages/sales/sales.wxss */

.sales-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f1f1f1;
  height: 100%;
}

.sales-status {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  font-size: 30rpx;
}

.sales-block {
  width: 100%;
  display: flex;
  flex-flow: column;
  background: #fff;
  margin-top: 12rpx;
}
.sales-block:last-child{
  margin-bottom: 12rpx;
}
.sales-detail {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 160rpx;
  padding: 30rpx 40rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.sales-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx;
}

.sales-time {
  font-size: 28rpx;
}

.sales-detail1 {
  display: flex;
  flex-flow: row;
  height: 60rpx;
  justify-content: space-around;
  width: 100%;
}

.sales-price {
  color: red;
  font-size: 28rpx;
}

.sales-name {
  font-size: 40rpx;
  overflow: hidden;
  height: 80rpx;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 2rpx solid #f1f1f1;
}
