/**index.wxss**/

.index-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  flex-wrap: wrap;
  width: 100%;
  padding-left: 20rpx;
  padding-top: 20rpx;
}

.index-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  box-sizing: border-box;
  width: 345rpx;
  padding: 10rpx;
  text-align: center;
  box-shadow: 0px 0px 6rpx 2rpx #f1f1f1;
  border-radius: 8rpx;
  background: #fff;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.index-btn-img {
  width: 318rpx;
  height: 240rpx;
  border-radius: 8rpx;
}

.index-naviga:hover {
  cursor: pointer;
}
